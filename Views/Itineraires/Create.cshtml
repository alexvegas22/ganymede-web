@model ganymede_web.Models.Itineraire

@{
    ViewData["Title"] = "Create";
}
<div class="main-container">
@if ( Context.Session.GetString("nom") == "Admin") {
<h1>Créer itinéraire</h1>

<h4>Itineraire</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HoraireID" class="control-label"></label>
                <select asp-for="HoraireID" class ="form-control" asp-items="ViewBag.HoraireID"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartLocation" class="control-label"></label>
                <input asp-for="StartLocation" class="form-control" />
                <span asp-validation-for="StartLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndLocation" class="control-label"></label>
                <input asp-for="EndLocation" class="form-control" />
                <span asp-validation-for="EndLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <input type="submit" value="Créer itinéraire" class="btn colorbutton" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
} else {
<p></p>
}
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
